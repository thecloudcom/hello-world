#Gussing Game#

import random
com_guess=random.randint(1,10)
chance=3
while True:
    user_guess = int(input("Enter your guess: "))

    if user_guess==com_guess:
        print("Correct!",com_guess,"==",user_guess)
        print("Congratulations")
        break
    else:
        if user_guess>com_guess:
            print("Your guess is greater",user_guess,">",com_guess)
        elif user_guess<com_guess:
            print("Your guess is lower",user_guess,"<",com_guess)
        chance-=1
        if chance>0:
            print("TRY AGAIN")
            print("Chance/Chances left:",chance)
        else:
            print("Game Over!\n The number was: ",com_guess)
            break
